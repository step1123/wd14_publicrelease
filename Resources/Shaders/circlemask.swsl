float circle(in vec2 _st, in float _radius){
    vec2 dist = _st-vec2(0.5);
	return smoothstep(_radius-(_radius*0.01),
                         _radius+(_radius*0.01),
                         dot(dist,dist)*4.0);
}

void fragment(){
	vec2 st = FRAGCOORD.xy*SCREEN_PIXEL_SIZE.xy;

	COLOR.rgb = vec3(0);
    COLOR.a = circle(st,0.05);
}
