<PanelContainer
    xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Margin="12 12 12 0"
    StyleClasses="PanelBackgroundAngledDark"
    VerticalExpand="True">

    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True">
        <BoxContainer Orientation="Horizontal">
            <controls:NanoHeading Name="Title" />
            <CheckBox Name="StateLaw" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="15" Pressed="True" />
        </BoxContainer>
        <RichTextLabel Name="Description" Margin="12 6 6 6" />
    </BoxContainer>
</PanelContainer>
